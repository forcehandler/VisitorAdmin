<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.example.sonupc.visitpreferencemanager.fragment.SurveyFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <EditText
            android:id="@+id/title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="survey title"
            android:inputType="text" />

        <EditText
            android:id="@+id/et1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="1st Input Hint"
            android:inputType="text" />

        <EditText
            android:id="@+id/opt1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="option "
            android:inputType="text" />

        <Button
            android:id="@+id/opt1Btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="add" />

        <EditText
            android:id="@+id/et2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="2nd Input Hint"
            android:inputType="text" />

        <EditText
            android:id="@+id/opt2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="option "
            android:inputType="text" />

        <Button
            android:id="@+id/opt2Btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="add" />

        <EditText
            android:id="@+id/et3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="3rd Input Hint"
            android:inputType="text" />

        <EditText
            android:id="@+id/opt3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="option "
            android:inputType="text" />

        <Button
            android:id="@+id/opt3Btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="add" />

        <EditText
            android:id="@+id/et4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="4th Input Hint"
            android:inputType="text" />

        <EditText
            android:id="@+id/opt4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="option "
            android:inputType="text" />

        <Button
            android:id="@+id/opt4Btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="add" />

        <Button
            android:id="@+id/submitBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="submit" />


    </LinearLayout>
</ScrollView>
